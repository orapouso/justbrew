extends ../layouts/main

block head
  link(rel='stylesheet', href='/css/login.css')

block content
  .container
    form.login.form-horizontal(action="/api/authenticate", method="post")
      p.error= message
      .form-group
        label.control-label(for='username') Username
        .controls
          .input-group
            span.input-group-addon
              i.icon-user
            input#username.span2(type='text', name="username", placeholder='Username', required)
        label.control-label(for='password') Password
        .controls
          .input-group
            span.input-group-addon
              i.icon-key
            input#password.span2(type='password', name="password", placeholder='Password', required)
      .form-group
        .controls
            button.btn.btn-primary(type='submit') Login
