extends ../layouts/main

block head
  link(rel='stylesheet', href='/css/login.css')

block content
    .outer
      .inner
        .container
          form.login.form-horizontal(action="/api/authenticate", method="post")
            p.error= message
            .control-group
              label.control-label(for='username') Username
              .controls
                .input-prepend
                  span.add-on
                    i.icon-user
                  input#username.span2(type='text', name="username", placeholder='Username', required)

            .control-group
              label.control-label(for='password') Senha
              .controls
                .input-prepend
                  span.add-on
                    i.icon-key
                  input#password.span2(type='password', name="password", placeholder='Senha', required)

            .control-group
              .controls
                button.btn.btn-primary(type='submit') Login
