@import 'header'

html,
body
  height: 100%

#wrap
  min-height: 100%
  height: auto
  /* Negative indent footer by its height */
  margin: 0 auto -60px
  /* Pad bottom by footer height */
  padding: 0 0 60px

#wrap > .container
  padding: (header-height+5px) 15px 0

#footer
  height: 60px
  background-color: #f5f5f5

#footer > .container
  padding-left: 15px
  padding-right: 15px

.container .text-muted
  margin: 20px 0

.sidebar
  padding: 5px
  background rgba(235, 235, 235, 0.47)
  border-radius(5px)

a.button
  font-size: 0.5em
  vertical-align: top